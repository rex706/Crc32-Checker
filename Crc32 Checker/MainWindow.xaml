<Window x:Class="Crc32_Checker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crc32_Checker"
        mc:Ignorable="d"
        Title="Crc32" Height="275" Width="400" Background="#FF333638" Icon="hashtag_dark.ico" ResizeMode="CanMinimize">
    <Grid>
        <Grid x:Name="FileDropGrid" Margin="10,10,10,0" Background="#FF1F1F1F" VerticalAlignment="Top" Height="184" Drop="FileDropGrid_Drop" AllowDrop="True">
            <TextBlock HorizontalAlignment="Center" Margin="0" TextWrapping="Wrap" Text="Drop File" VerticalAlignment="Center" Foreground="Gray" FontSize="16" TextAlignment="Center"/>

        </Grid>
        <TextBox x:Name="Crc32OutputTextBox" Height="23" Margin="10,0,10,11" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Background="#FF191919" Foreground="#FFF1F1F1" Padding="5,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsReadOnly="True"/>
    </Grid>
</Window>
